{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "formatter": {
    "indentStyle": "tab",
    "indentWidth": 4
  },
  "linter": {
    "rules": {
      "nursery": {
        "useSortedClasses": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "style": {
        "useBlockStatements": "off",
        "useCollapsedElseIf": "error",
        "useNamingConvention": {
          "level": "off",
          "options": {
            "requireAscii": true,
            "enumMemberCase": "PascalCase"
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "indentStyle": "tab",
      "indentWidth": 4,
      "jsxQuoteStyle": "single",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  }
}
